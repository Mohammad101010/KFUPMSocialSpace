<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_blog"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_margin="6dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    cardview:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:id="@+id/card_view_blog_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:textSize="16sp"
            android:id="@+id/card_view_blog_category_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="16sp"
                android:text="01/01/2019"
                android:id="@+id/card_view_blog_date_posted_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date" />

            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/card_view_blog_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By"/>

            <TextView
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/card_view_blog_writer_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>